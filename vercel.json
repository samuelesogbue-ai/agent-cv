{
    "buildCommand": "cd frontend && pnpm install && pnpm build",
    "outputDirectory": "frontend/.next",
    "devCommand": "cd frontend && pnpm dev",
    "installCommand": "cd frontend && pnpm install",
    "framework": "nextjs",
    "functions": {
        "api/**/*.py": {
            "runtime": "python3.11"
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.py"
        }
    ]
}